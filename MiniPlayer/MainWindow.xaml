<Window x:Class="MiniPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Menu Height="23" Name="menu" VerticalAlignment="Top" IsMainMenu="True">
            <MenuItem Header="File">
                <MenuItem Header="Open File..." Click="OpenFile" />
                <Separator />
                <MenuItem Header="Exit" Click="Exit"/>
            </MenuItem>
            <MenuItem Header="About" />
        </Menu>
        <StatusBar Height="23" Name="statusBar" VerticalAlignment="Bottom" />
        <Rectangle Name="rectangle" Stroke="White" VerticalAlignment="Top" />
    </Grid>
</Window>
